PORT=8000
FRONTEND_URL=https://tu-app.vercel.app
NODE_ENV=production

# Turso Database Configuration
# Para obtener estos valores:
# 1. Instalar Turso CLI: curl -sSfL https://get.tur.so/install.sh | bash
# 2. Crear cuenta: turso auth signup
# 3. Crear base de datos: turso db create payment-manager
# 4. Obtener URL: turso db show payment-manager --url
# 5. Crear token: turso db tokens create payment-manager

TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here
